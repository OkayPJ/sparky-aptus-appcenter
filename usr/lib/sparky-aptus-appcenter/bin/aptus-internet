#!/bin/bash

# Web application installer
# Copyright 2017-2018 Pawe≈Ç "pavroo" Pijanowski under GNU GPL 3
# Last update 2018/12/07 by pavroo

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus-appcenter"
if [ "`cat /etc/default/locale | grep de`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep es`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep id_ID`" != "" ]; then
. $DEFLOCDIR/id_ID
elif [ "`cat /etc/default/locale | grep it`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep pl`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"
if [ "$testroot" != "root" ]; then
	echo "Must be root... Exiting now..."
	exit 1
fi

DIALOG="`which yad` --width=450 --height=250 --window-icon=system-software-install --image=system-software-install --center"
TEXT="--text="
TITLE="--title="
OKEXIT="--button=Ok:0 --button=$LOCAL001:1"
MSGBOX="--button=Ok:0"
BUTTONREMOVE="--button=$LOCAL008:3"
BUTTONREINSTALL="--button=$LOCAL009:4"
BUTTONINSTALL="--button=$LOCAL010:0"
BUTTONEXIT="--button=$LOCAL001:1"
TITLETEXT="$LOCAL002"
PINGTEST=$(ping -c 1 debian.org | grep [0-9])
WORKDIR="/tmp/sparky-chrome"
SERVERG="https://dl.google.com/linux/direct"
PACKG64="google-chrome-stable_current_amd64.deb"
SERVERE="https://dl.google.com/dl/earth/client/current"
PACKE32="google-earth-pro-stable_current_i386.deb"
PACKE64="google-earth-pro-stable_current_amd64.deb"
SPARKYVERCHECK4="`cat /etc/issue | grep 4`"
DEBIANVERCHECK9="`cat /etc/issue | grep stretch`"
TESTTILDA=`which tilda`
TILDAVER=`dpkg-query -l | grep tilda | grep 1.3`
if [ "$TESTTILDA" != "" ]; then
	if [ "$TILDAVER" != "" ]; then
		SPARKYXTERM="$TESTTILDA -c"
	elif [ "$TILDAVER" = "" ]; then
		SPARKYXTERM="$TESTTILDA -g /etc/sparky-aptus-appcenter/tilda-config0 -c"
	fi
elif [ -f /usr/bin/xterm ]; then
	SPARKYXTERM="xterm -e"
elif [ -f /usr/bin/x-terminal-emulator ]; then
	SPARKYXTERM="x-terminal-emulator -e"
else
	echo "x terminal emulator is missing... exiting..."
	exit 1
fi
INSTALL="apt-get install"
REINSTALL="apt-get install --reinstall"
UNINSTALL="apt-get purge"
ARCH64="`uname -m | grep x86_64`"
ARCH32="`uname -m | grep 686`"
ARCHARM="`uname -m | grep arm`"

# 64bit only are: brave, cyberfox, google-chrome-stable, opera, waterfox
case $1 in
  ##### web email #####
  alpine)
	PACKAGE="alpine"
     ;;
  claws-mail)
	PACKAGE="claws-mail"
     ;;
  evolution)
	PACKAGE="evolution"
     ;;
  geary)
	PACKAGE="geary"
     ;;
  kmail)
	PACKAGE="kmail"
     ;;
  mutt)
	PACKAGE="mutt"
     ;;
  sylpheed)
	PACKAGE="sylpheed"
     ;;
  thunderbird)
	PACKAGE="thunderbird"
     ;;
  trojita)
	PACKAGE="trojita"
     ;;
  ##### web file transfer #####
  aria2)
	PACKAGE="aria2"
     ;;
  filezilla)
	PACKAGE="filezilla"
     ;;
  gftp)
	PACKAGE="gftp-gtk"
     ;;
  jftp)
	PACKAGE="jftp"
     ;;
  kget)
	PACKAGE="kget"
     ;;
  lftp)
	PACKAGE="lftp"
     ;;
  ncftp)
	PACKAGE="ncftp"
     ;;
  uftp)
	PACKAGE="uftp"
     ;;
  uget)
	PACKAGE="uget"
     ;;
  wget)
	PACKAGE="wget"
     ;;
  ##### web others #####
  dropbox)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL016\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="dropbox"
     ;;
  google-earth)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="google-earth-pro-stable"
	if [ "$ARCH64" != "" ]; then
		PACKEARTH="$PACKE64"
	else
		PACKEARTH="$PACKE32"
	fi
     ;;
  megasync)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL016\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="megasync"
     ;;
  spideroakone)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL016\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="spideroakone"
     ;;
  youtube-dlg)
	PACKAGE="youtube-dlg"
     ;;
  ##### web p2p #####
  amule)
	PACKAGE="amule"
     ;;
  bitstormlite)
	PACKAGE="bitstormlite"
     ;;
  bittornado-gui)
	PACKAGE="bittornado-gui"
     ;;
  bittorrent-gui)
	PACKAGE="bittorrent-gui"
     ;;
  ctorrent)
	PACKAGE="ctorrent"
     ;;
  deluge)
	PACKAGE="deluge"
     ;;
  gtk-gnutella)
	PACKAGE="gtk-gnutella"
     ;;
  ktorrent)
	PACKAGE="ktorrent"
     ;;
  mldonkey-gui)
	PACKAGE="mldonkey-gui"
     ;;
  nicotine)
	PACKAGE="nicotine"
     ;;
  qbittorrent)
	PACKAGE="qbittorrent"
     ;;
  rtorrent)
	PACKAGE="rtorrent"
     ;;
  transmission)
	PACKAGE="transmission"
     ;;
  vuze)
	PACKAGE="vuze"
     ;;
  ##### web browsers #####
  brave)
	if [ "$ARCH64" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL004\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="brave"
     ;;
  chromium)
	PACKAGE="chromium"
     ;;
  conkeror)
	PACKAGE="conkeror"
     ;;
  cyberfox)
	if [ "$ARCH64" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL004\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="cyberfox"
     ;;
  dillo)
	PACKAGE="dillo"
     ;;
  dooble)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="dooble"
     ;;
  elinks)
	PACKAGE="elinks"
     ;;
  epiphany)
	PACKAGE="epiphany-browser"
     ;;
  falkon)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="falkon"
     ;;
  firefox-esr)
	PACKAGE="firefox-esr"
     ;;
  firefox-latest)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	if [ "$SPARKYVERCHECK4" != "" ] || [ "$DEBIANVERCHECK9" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL006\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="firefox"
     ;;
  google-chrome-stable)
	if [ "$ARCH64" = "" ]; 	then
		$DIALOG $TEXT"\n$LOCAL004\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="google-chrome-stable"
     ;;
  icecat)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="icecat"
     ;;
  iridium)
	if [ "$ARCH64" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL004\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="iridium-browser"
     ;;
  iron)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="iron"
     ;;
  konqueror)
	PACKAGE="konqueror"
     ;;
  links2)
	PACKAGE="links2"
     ;;
  lynx)
	PACKAGE="lynx"
     ;;
  midori)
	PACKAGE="midori"
     ;;
   min)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="min"
     ;;
  netsurf)
	if [ "$SPARKYVERCHECK4" = "" ] || [ "$DEBIANVERCHECK9" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL016\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="netsurf"
     ;;
  opera-stable)
	if [ "$ARCH64" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL004\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="opera-stable"
     ;;
  otter-browser)
	PACKAGE="otter-browser"
     ;;
  palemoon)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="palemoon"
     ;;
  seamonkey)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="seamonkey"
     ;;
  tor-browser)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL007\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="tor-browser"
     ;;
  vivaldi-stable)
	PACKAGE="vivaldi-stable"
     ;;
  w3m)
	PACKAGE="w3m"
     ;;
  waterfox)
	if [ "$ARCH64" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL004\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="waterfox"
     ;;
esac

CHECKPACKAGE0=`apt-cache policy $PACKAGE | head -n2 | tail -n1 | grep [0-9]`
# install, reinstall or remove google-chrome
if [ "$1" = "google-chrome-stable" ]; then
	if [ "$CHECKPACKAGE0" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL011\n$LOCAL012" $TITLE"$TITLETEXT" $BUTTONREMOVE $BUTTONREINSTALL $BUTTONEXIT
		ret=$?
		if [[ $ret -eq 3 ]]; then
			$SPARKYXTERM "$UNINSTALL $PACKAGE"
		elif [[ $ret -eq 4 ]]; then
			if [ "$PINGTEST" = "" ]; then
				$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL003 \n\n$LOCAL005"
				exit 1
			fi
			rm -rf $WORKDIR
			mkdir -p $WORKDIR
			cd $WORKDIR
			$SPARKYXTERM "wget $SERVERG/$PACKG64"
			$SPARKYXTERM "$INSTALL ./$PACKG64"
		else
			exit 1
		fi
	elif [ "$CHECKPACKAGE0" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL014" $TITLE"$TITLETEXT" $BUTTONINSTALL $BUTTONEXIT
		if [ "$?" = "0" ]; then
			if [ "$PINGTEST" = "" ]; then
				$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL003 \n\n$LOCAL014"
				exit 1
			fi
			rm -rf $WORKDIR
			mkdir -p $WORKDIR
			cd $WORKDIR
			$SPARKYXTERM "wget $SERVERG/$PACKG64"
			$SPARKYXTERM "$INSTALL ./$PACKG64"
			CHECKPACKAGE1=`apt-cache policy $PACKAGE | head -n2 | tail -n1 | grep [0-9]`
			if [ "$CHECKPACKAGE1" = "" ]; then
				$DIALOG $TEXT"\n$LOCAL013\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
				exit 1
			else
				$DIALOG $TEXT"\n$LOCAL015\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
				exit 1
			fi

		elif [ "$?" != "0" ]; then
			exit 1
		fi
	fi

# install, reinstall or remove google-earth
elif [ "$1" = "google-earth" ]; then
	if [ "$CHECKPACKAGE0" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL011\n$LOCAL012" $TITLE"$TITLETEXT" $BUTTONREMOVE $BUTTONREINSTALL $BUTTONEXIT
		ret=$?
		if [[ $ret -eq 3 ]]; then
			$SPARKYXTERM "$UNINSTALL $PACKAGE"
		elif [[ $ret -eq 4 ]]; then
			if [ "$PINGTEST" = "" ]; then
				$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL003 \n\n$LOCAL005"
				exit 1
			fi
			rm -rf $WORKDIR
			mkdir -p $WORKDIR
			cd $WORKDIR
			$SPARKYXTERM "wget $SERVERE/$PACKEARTH"
			$SPARKYXTERM "$INSTALL ./$PACKEARTH"
		else
			exit 1
		fi
	elif [ "$CHECKPACKAGE0" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL014" $TITLE"$TITLETEXT" $BUTTONINSTALL $BUTTONEXIT
		if [ "$?" = "0" ]; then
			if [ "$PINGTEST" = "" ]; then
				$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL003 \n\n$LOCAL014"
				exit 1
			fi
			rm -rf $WORKDIR
			mkdir -p $WORKDIR
			cd $WORKDIR
			$SPARKYXTERM "wget $SERVERE/$PACKEARTH"
			$SPARKYXTERM "$INSTALL ./$PACKEARTH"
			CHECKPACKAGE1=`apt-cache policy $PACKAGE | head -n2 | tail -n1 | grep [0-9]`
			if [ "$CHECKPACKAGE1" = "" ]; then
				$DIALOG $TEXT"\n$LOCAL013\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
				exit 1
			else
				$DIALOG $TEXT"\n$LOCAL015\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
				exit 1
			fi

		elif [ "$?" != "0" ]; then
			exit 1
		fi
	fi

# install, reinstall or remove anything else
else
	if [ "$CHECKPACKAGE0" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL011\n$LOCAL012" $TITLE"$TITLETEXT" $BUTTONREMOVE $BUTTONREINSTALL $BUTTONEXIT
		ret=$?
		if [[ $ret -eq 3 ]]; then
			$SPARKYXTERM "$UNINSTALL $PACKAGE"
		elif [[ $ret -eq 4 ]]; then
			if [ "$PINGTEST" = "" ]; then
				$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL003 \n\n$LOCAL005"
				exit 1
			fi
			$SPARKYXTERM "$REINSTALL $PACKAGE"
		else
			exit 1
		fi
	elif [ "$CHECKPACKAGE0" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL014" $TITLE"$TITLETEXT" $BUTTONINSTALL $BUTTONEXIT
		if [ "$?" = "0" ]; then
			if [ "$PINGTEST" = "" ]; then
				$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL003 \n\n$LOCAL005"
				exit 1
			fi
			$SPARKYXTERM "$INSTALL $PACKAGE"
			CHECKPACKAGE1=`apt-cache policy $PACKAGE | head -n2 | tail -n1 | grep [0-9]`
			if [ "$CHECKPACKAGE1" = "" ]; then
				$DIALOG $TEXT"\n$LOCAL013\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
				exit 1
			else
				$DIALOG $TEXT"\n$LOCAL015\n\n$LOCAL005" $TITLE"$TITLETEXT" $MSGBOX
				exit 1
			fi

		elif [ "$?" != "0" ]; then
			exit 1
		fi
	fi
fi

exit 0
