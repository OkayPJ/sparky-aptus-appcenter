#!/bin/bash

# Last update Dec 21, 2018 by pavroo

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
cd /usr/lib/sparky-aptus-appcenter

SPARKYSU=`which spsu`
KTSUSS=`which ktsuss`
SUTOROOT=`which su-to-root`

if [ "$SPARKYSU" != "" ]; then
	$SPARKYSU ./aptus-appcenter
elif [ "$KTSUSS" != "" ]; then
	$KTSUSS ./aptus-appcenter
elif [ "$SUTOROOT" != "" ]; then
	$SUTOROOT -X -c "./aptus-appcenter"
else
	echo "can not run sparky-aptus-appcenter, must be root or sudo, exiting..."
fi

exit 0
