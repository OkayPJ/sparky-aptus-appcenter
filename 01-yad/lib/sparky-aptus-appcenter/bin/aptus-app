		PACKTITLE="Remove or Reinstall Package"
		PACKTEXT="$LOCAL011 $LOCAL012"
		PACKBUTTONS="<a href="aptus://debremo_$1" class="buttonmenu">$LOCAL008</a>&nbsp;&nbsp; <a href="aptus://debrein_$1" class="buttonmenu">$LOCAL009</a>&nbsp;&nbsp; <a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
	elif [ "$CHECKPACKAGE0" = "" ]; then
		if [ "$PINGTEST" = "" ]; then
			PACKTITLE="Install Package"
			PACKTEXT="$LOCAL003 $LOCAL005"
			PACKBUTTONS="<a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
		else
			PACKTITLE="Install Package"
			PACKTEXT="$LOCAL014"
			PACKBUTTONS="<a href="aptus://debinst_$1" class="buttonmenu">$LOCAL010</a>&nbsp;&nbsp; <a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
		fi
	fi

# run vmware installer
elif [ "$1" = "vmware" ]; then
	/usr/bin/sparky-vmplayer-installer
	exit 0
	
# install, reinstall or remove wps-office
elif [ "$1" = "wps-office" ]; then
	if [ -f /usr/bin/wps ]; then
		PACKTITLE="Remove or Reinstall Package"
		PACKTEXT="$LOCAL011 $LOCAL012"
		PACKBUTTONS="<a href="aptus://debremo_$1" class="buttonmenu">$LOCAL008</a>&nbsp;&nbsp; <a href="aptus://debrein_$1" class="buttonmenu">$LOCAL009</a>&nbsp;&nbsp; <a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
	elif [ ! -f /usr/bin/wps ]; then
		if [ "$PINGTEST" = "" ]; then
			PACKTITLE="Install Package"
			PACKTEXT="$LOCAL003 $LOCAL005"
			PACKBUTTONS="<a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
		else
			PACKTITLE="Install Package"
			PACKTEXT="$LOCAL014"
			PACKBUTTONS="<a href="aptus://debinst_$1" class="buttonmenu">$LOCAL010</a>&nbsp;&nbsp; <a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
		fi
	fi

# install, reinstall or remove anything else
else
	if [ "$CHECKPACKAGE0" != "" ]; then
		PACKTITLE="Remove or Reinstall Package"
		PACKTEXT="$LOCAL011 $LOCAL012"
		PACKBUTTONS="<a href="aptus://debremo_$1" class="buttonmenu">$LOCAL008</a>&nbsp;&nbsp; <a href="aptus://debrein_$1" class="buttonmenu">$LOCAL009</a>&nbsp;&nbsp; <a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
	elif [ "$CHECKPACKAGE0" = "" ]; then
		if [ "$PINGTEST" = "" ]; then
			PACKTITLE="Install Package"
			PACKTEXT="$LOCAL003 $LOCAL005"
			PACKBUTTONS="<a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
		else
			PACKTITLE="Install Package"
			PACKTEXT="$LOCAL014"
			PACKBUTTONS="<a href="aptus://debinst_$1" class="buttonmenu">$LOCAL010</a>&nbsp;&nbsp; <a href="aptus://back_back" class="buttonmenu">$LOCAL001</a><br />"
		fi
	fi
fi

cat > /usr/lib/sparky-aptus-appcenter/page-install.html << FOO
